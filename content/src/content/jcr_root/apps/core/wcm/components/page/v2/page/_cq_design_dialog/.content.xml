<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v2.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items
                            jcr:primaryType="nt:unstructured"
                            sling:hideChildren="[heading,well]">
                            <clientlibs
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}false"
                                fieldDescription="The client library categories to load. Unless specified, JavaScript is added at the body end, CSS in the page head."
                                fieldLabel="Client Libraries">
                                <field
                                    granite:class="cmp-pagePolicyDialog__clientlib"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well"
                                    name="./clientlibs">
                                    <items jcr:primaryType="nt:unstructured">
                                        <category
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete"
                                            emptyText="Client library category"
                                            mode="contains"
                                            multiple="{Boolean}false"
                                            name="./clientlibs"
                                            required="{Boolean}false">
                                            <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/wcm/components/commons/datasources/clientlibrarycategories/v1"/>
                                            <options
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/autocomplete/list"/>
                                            <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                cmp-policydialog-page-v2-hook="clientLibCategory"/>
                                        </category>
                                        <jsHead
                                            granite:class="cq-SelectHead-event"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            checked="{Boolean}false"
                                            fieldDescription="Load JavaScript for this client library category in the page head"
                                            text="Load JavaScript in the page head"
                                            value="true">
                                            <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                cmp-policydialog-page-v2-hook="clientLibJsHead"/>
                                        </jsHead>
                                    </items>
                                    <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        cmp-policydialog-page-v2-hook="clientLib"/>
                                </field>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cmp-policydialog-page-v2-hook="clientLibs"/>
                            </clientlibs>
                            <clientlibsJsHead
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                name="./clientlibsJsHead">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cmp-policydialog-page-v2-hook="jsHeadInput"/>
                            </clientlibsJsHead>
                            <clientlibsJsHeadTypeHint
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                name="./clientlibsJsHead@TypeHint"
                                value="String[]">
                            </clientlibsJsHeadTypeHint>
                            <appResourcesClientlib
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete"
                                emptyText="org.example.myapp.resources"
                                fieldDescription="The Client Library category that is used to serve web resources such as favicons."
                                fieldLabel="Web Resources Client Library"
                                mode="contains"
                                multiple="{Boolean}false"
                                name="./appResourcesClientlib"
                                required="{Boolean}false">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="core/wcm/components/commons/datasources/clientlibrarycategories/v1"/>
                                <options
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/autocomplete/list"/>
                            </appResourcesClientlib>
                        </items>
                    </properties>
                    <styletab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_design/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
